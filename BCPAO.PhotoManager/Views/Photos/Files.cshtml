@model BCPAO.PhotoManager.Models.FilesViewModel

@{
   ViewData["Title"] = "Files";
}

<style>
  
</style>

<div>1 of 20 photos uploaded to the database on @DateTime.Now. No input is required at this time, tagging photos can be done at a later time.</div>
<div style="margin:10px 0;">
   <button class="btn btn-primary">Save all selected...</button>
   <button class="btn btn-danger">Delete all selected...</button>
</div>

<div class="table-responsive">
   <table class="table table-sm table-bordered table-condensed table-striped">
      <thead>
         <tr>
            <th><input id="selectAll" type="checkbox" /> All</th>
            <th>Photo</th>
            <th>File Name</th>
            <th>Date Taken</th>
            <th>Property ID</th>
            <th>Building ID</th>
            <th>Building SEQ</th>
            <th>Status</th>
            <th>Manage</th>
         </tr>
      </thead>
      <tbody>
         @{ int row = 0; }
         @foreach (var item in Model.Files)
         {
         <tr>
            <td style="width:60px;">
               <input type="checkbox" id="chkRow@(row++)" /> @(row)
            </td>
            <td style="width:1px;">
               <a asp-action="Download" asp-route-filename="@item.Name">
                  <img src="@item.Url" style="width:100px;height:80px;" />
               </a>
            </td>
            <td>
               <div>@item.Name</div>               
            </td>
            <td>
               <div>@DateTime.Now</div>
            </td>
            <td style="width:1px;vertical-align:top;">
               <input id="propertyId" type="text" class="form-control" maxlength="7" style="width:100px;" />
            </td>
            <td style="width:1px;vertical-align:top;">
               <input id="buildingId" type="text" class="form-control" maxlength="3" style="width:100px;" />
            </td>
            <td style="width:1px;vertical-align:top;">
               <input id="buildingSeq" type="text" class="form-control" maxlength="3" style="width:100px;" />
            </td>
            <td>
               <input type="checkbox" name="" /> Master
               <input type="checkbox" name="" /> Front
               <input type="checkbox" name="" /> Public
            </td>
            <td>
               <button class="btn btn-primary">Save</button>
               <button class="btn btn-danger">Delete</button>
            </td>
         </tr>
         }
      </tbody>
   </table>
</div>