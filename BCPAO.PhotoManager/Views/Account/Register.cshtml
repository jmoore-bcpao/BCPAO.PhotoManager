@model RegisterViewModel
@{
   ViewData["Title"] = "Register";
   Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div id="divForm" class="col-sm-6 col-sm-offset-3 l-form-5-box wow fadeInUp" style="display:none;">
   <div class="l-form-5-top">
      <div class="l-form-5-top-left">
         <h3>BCPAO Photo Manager</h3>
         <p>Register for a new login account.</p>
      </div>
      <div class="l-form-5-top-right">
         <i class="fa fa-user-secret"></i>
      </div>
   </div>

   <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" autocomplete="off" style="margin: 0 10px;">
      @Html.AntiForgeryToken()
      <div asp-validation-summary="All" class="text-danger"></div>

      <div class="row form-row">
         <div class="col-md-6">
            <div class="form-group">
               <label asp-for="FirstName" class="sr-only"></label>
               <input asp-for="FirstName" class="l-form-5-password form-control" placeholder="First name..." />
               <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
         </div>
         <div class="col-md-6">
            <div class="form-group">
               <label asp-for="LastName" class="sr-only"></label>
               <input asp-for="LastName" class="l-form-5-password form-control" placeholder="Last name..." />
               <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
         </div>
      </div>

      <div class="form-group">
         <label asp-for="UserName" class="sr-only"></label>
         <input asp-for="UserName" class="l-form-5-password form-control" placeholder="Username..." />
         <span asp-validation-for="UserName" class="text-danger"></span>
      </div>

      <div class="form-group">
         <label asp-for="Email" class="sr-only"></label>
         <input asp-for="Email" class="l-form-5-password form-control" placeholder="Email address..." />
         <span asp-validation-for="Email" class="text-danger"></span>
      </div>

      <div class="row form-row">
         <div class="col-md-6">
            <div class="form-group">
               <label asp-for="Password" class="sr-only"></label>
               <input asp-for="Password" class="l-form-5-password form-control" placeholder="Password..." />
               <span asp-validation-for="Password" class="text-danger"></span>
            </div>
         </div>
         <div class="col-md-6">
            <div class="form-group">
               <label asp-for="ConfirmPassword" class="sr-only"></label>
               <input asp-for="ConfirmPassword" class="l-form-5-password form-control" placeholder="Confirm password..." />
               <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
         </div>
      </div>

      <div class="form-group">
         <button type="submit" class="btn">
            <i class="fa fa-sign-in-alt"></i>&nbsp;Register
         </button>
      </div>
      <div class="row">
         <div class="col-xs-5">
            <div class="form-group" style="text-align:left;">
               <a asp-action="Login">Back to login</a>&nbsp;<i class="fas fa-backward"></i>
            </div>
         </div>
         <div class="col-xs-7">
            <div class="form-group" style="text-align:right;">
               <a href="https://www.bcpao.us">Brevard County Property Appraiser</a>&nbsp;<i class="fas fa-external-link-alt"></i>
            </div>
         </div>
      </div>
   </form>

</div>

@section Scripts {
   @await Html.PartialAsync("_ValidationScriptsPartial")
}
