@model ForgotPasswordViewModel
@{
   ViewData["Title"] = "Forgot your password?";
   Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div id="divForm" class="col-sm-6 col-sm-offset-3 l-form-5-box wow fadeInUp" style="display:none;">
   <div class="l-form-5-top">
      <div class="l-form-5-top-left">
         <h3>BCPAO Photo Manager</h3>
         <p>Enter your username or email to recover your password.</p>
      </div>
      <div class="l-form-5-top-right">
         <i class="fas fa-user-secret"></i>
      </div>
   </div>
   <div class="row">
      <div class="col-md-12">
         <form asp-action="ForgotPassword" method="post" autocomplete="off" style="margin: 0 10px;">
            @Html.AntiForgeryToken()
            <div class="form-group">
               <label asp-for="Email" class="sr-only"></label>
               <input asp-for="Email" class="l-form-5-username form-control" placeholder="Username or email..." />
               <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
               <button type="submit" class="btn">
                  <i class="fas fa-unlock-alt"></i> Recover Password
               </button>
            </div>

            <div class="row">
               <div class="col-xs-5">
                  <div class="form-group" style="text-align:left;">
                     <a asp-action="Login">Back to login</a>&nbsp;<i class="fas fa-backward"></i>
                  </div>
               </div>
               <div class="col-xs-7">
                  <div class="form-group" style="text-align:right;">
                     <a href="https://www.bcpao.us">Brevard County Property Appraiser</a>&nbsp;<i class="fas fa-external-link-alt"></i>
                  </div>
               </div>
            </div>

         </form>
      </div>
   </div>
</div>

@section Scripts {
   @await Html.PartialAsync("_ValidationScriptsPartial")
}
